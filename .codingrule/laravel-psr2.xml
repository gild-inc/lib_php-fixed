<?xml version="1.0"?>
<ruleset name="PSR2_PLUS">
    <description>Custom rule on PSR2</description>
    <!-- 対象フォルダ -->
    <file>app</file>
    <file>config</file>
    <file>resources</file>
    <file>routes</file>
    <file>tests</file>
    <!-- 除外したいファイル、ディレクトリを列挙 -->
    <!-- メモリーサイズが不足しているエラーが出た場合は、不要なディレクトリ配下もチェックが通っていないか要確認 -->
    <exclude-pattern>*/.phpstorm.meta.php</exclude-pattern>
    <exclude-pattern>*/bootstrap/*</exclude-pattern>
    <exclude-pattern>*/composer.lock</exclude-pattern>
    <exclude-pattern>*/database/*</exclude-pattern>
    <exclude-pattern>*/docs/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/public/*</exclude-pattern>
    <exclude-pattern>*/storage/*</exclude-pattern>
    <exclude-pattern>*/test/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/_ide_helper.php</exclude-pattern>
    <exclude-pattern>*/_ide_helper_models.php</exclude-pattern>
    <exclude-pattern>*/*.js</exclude-pattern>
    <exclude-pattern>*/*.css</exclude-pattern>
    <exclude-pattern>*/*.xml</exclude-pattern>

    <!-- PSR2をベースとするため継承 -->
    <rule ref="PSR2">
        <!-- 除外したい項目を列挙 -->
    </rule>
    <!-- phpタグがない場合のエラーを除外(例えばxxx.blade.phpは別に<?phpから始まらなくても良いファイル。htmlファイルも同様。) -->
    <rule ref="Internal.NoCodeFound">
        <severity>0</severity>
    </rule>
    <!--１行の文字数制限を変更-->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <!-- lineLimit         : 1 行の文字数が超過すると WARNING が発生 -->
            <!-- absoluteLineLimit : 1 行の文字数が超過すると ERROR が発生   -->
            <property name="lineLimit" value="160"/>
            <property name="absoluteLineLimit" value="200"/>
        </properties>
    </rule>
</ruleset>
